{
	"name": "baraja-core/deepl",
	"description": "Translate texts. Simply.",
	"homepage": "https://github.com/baraja-core/deepl",
	"authors": [
		{
			"name": "Jan Barášek",
			"homepage": "https://baraja.cz"
		}
	],
	"require": {
		"php": "^8.0"
	},
	"require-dev": {
		"phpstan/phpstan": "0.12.93",
		"tracy/tracy": "2.8.5",
		"phpstan/phpstan-nette": "0.12.21",
		"spaze/phpstan-disallowed-calls": "1.5.0",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpstan": [
			"vendor/bin/phpstan analyse src -c phpstan.neon --level 8 --no-progress"
		]
	},
	"minimum-stability": "stable"
}
